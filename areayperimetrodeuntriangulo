#include <stdio.h>
int main(){
    //compilar area y perimetro de un triangulo
    float base,altura,area,perimetro;
    //pedir datos
    printf("Ingresa la base");
    scanf("%f",&base);
    printf("Ingrese la altura");
    scanf("%f",&altura);
    //formula
    area = (base * altura)/2 ;
    perimetro = (base * 3);
    //resultado
    printf("El area es %f\nEl perimetro es %f\n",area,perimetro);
    
    return 0;
}
