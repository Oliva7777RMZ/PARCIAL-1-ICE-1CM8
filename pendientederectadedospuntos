#include<stdio.h>

int main(){
    //compilar pendiente de una recta dados dos puntos
    float x1,y1,x2,y2,pendiente;
    //pedir datos 
    printf("Dame el valor de x1 ");
    scanf("%f", &x1 );
    printf("Dame el valor de y1");
    scanf("%f",&y1 );
    printf("Dame el valor de x2 ");
    scanf("%f", &x2);
    printf("Dame el valor de y2 ");
    scanf("%f",&y2 );
    //formula
    pendiente = (y2-y1)/(x2-x1);
    
    //resultado
    printf("La Pendiente es %f",pendiente);
    
    return 0;
}
